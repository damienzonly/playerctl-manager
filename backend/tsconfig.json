{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "outDir": "../dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "sourceMap": false,
        "noImplicitAny": false
    },
    "include": ["./src/**/*"]
}
